# Django Settings
SECRET_KEY=your-production-secret-key-here
DEBUG=False
ALLOWED_HOSTS=.elasticbeanstalk.com,yourdomain.com,www.yourdomain.com

# Database Configuration
USE_POSTGRES=True
DATABASE_URL=postgres://username:password@your-rds-endpoint.amazonaws.com:5432/mygafflist
DB_NAME=mygafflist
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_HOST=your-rds-endpoint.amazonaws.com
DB_PORT=5432

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=mygafflist-media
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=%s.s3.amazonaws.com % AWS_STORAGE_BUCKET_NAME
AWS_S3_OBJECT_PARAMETERS={'CacheControl': 'max-age=86400'}
AWS_DEFAULT_ACL=public-read
AWS_S3_SIGNATURE_VERSION=s3v4

# Static Files
AWS_STATIC_BUCKET_NAME=mygafflist-static
STATIC_URL=https://mygafflist-static.s3.amazonaws.com/
MEDIA_URL=https://mygafflist-media.s3.amazonaws.com/

# Redis Configuration (for Channels)
REDIS_URL=redis://your-elasticache-endpoint.amazonaws.com:6379/0
CHANNEL_LAYERS_REDIS_HOST=your-elasticache-endpoint.amazonaws.com

# Email Configuration
EMAIL_BACKEND=sendgrid.SendGridBackend
SENDGRID_API_KEY=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=admin@yourdomain.com

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_IDENTITY_WEBHOOK_SECRET=whsec_your-identity-webhook-secret

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# CORS Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Frontend URLs
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com